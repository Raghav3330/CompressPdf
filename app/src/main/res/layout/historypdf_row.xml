<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:background="#0FFFFFFF">

        <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/pdf" />

        <TextView
            android:id="@+id/row_name"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="25dp"
            android:layout_toRightOf="@id/pdfImage"
            android:fontFamily="@font/interblack"
            android:fontWeight="500"
            android:textFontWeight="500"
            android:text="PDF FILE  TITLE"
            android:textColor="@color/spaceup_black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/pdfImage"
            android:fontFamily="@font/interblack"
            android:text="20MB"
            android:textColor="@color/spaceup_black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/row_size"
            android:text="|"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/row_size"
            android:fontFamily="@font/intermedium"
            android:text="ENTER DATE"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/row_date"
            android:text="|"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/row_date"
            android:fontFamily="@font/intermedium"
            android:text="@string/open"
            android:textSize="10sp" />

        <Button
            android:id="@+id/row_shareButton"
            android:layout_width="63dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/frame6"
            android:textColor="@color/spaceup_black"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>