<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/pdf" />

        <TextView
            android:id="@+id/row_name"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="25dp"
            android:layout_toRightOf="@id/pdfImage"
            android:fontFamily="@font/interblack"
            android:text="PDF FILE TITLE"
            android:fontWeight="500"
            android:textColor="?colorOnSurface"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/pdfImage"
            android:fontFamily="@font/interblack"
            android:text="20MB"
            android:textColor="?colorOnSurface"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/row_size"
            android:text="|"
            android:textColor="?colorOnSurface"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/row_size"
            android:fontFamily="@font/intermedium"
            android:text="ENTER DATE"
            android:textColor="?colorOnSurface"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/row_date"
            android:text="|"
            android:textColor="?colorOnSurface"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/row_date"
            android:fontFamily="@font/intermedium"
            android:text="@string/open"
            android:textColor="?colorOnSurface"
            android:textSize="11sp" />

        <Button
            android:id="@+id/row_shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Share"
            android:layout_marginEnd="5dp"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>