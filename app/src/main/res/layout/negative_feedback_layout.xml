<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="12dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">


        <TextView
            android:id="@+id/title_negative_feedback_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="@font/intermedium"
            android:text="Help us improve our services for you."
            android:textColor="#1f4070"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/reason1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_negative_feedback_card"
            android:layout_centerInParent="true"

            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/slow_process"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="50"
                android:background="@drawable/transparent_stoke_background"
                android:gravity="center"
                android:fontFamily="@font/intermedium"
                android:text="Slow Process"
                android:textColor="@color/app_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/data_lost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="50"
                android:background="@drawable/transparent_stoke_background"
                android:gravity="center"
                android:text="Wrong App selected"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/app_text_color"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/reason2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reason1"
            android:layout_centerInParent="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/app_crashed"
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="50"
                android:background="@drawable/transparent_stoke_background"
                android:gravity="center"
                android:text="App Crashed"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/app_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/difficult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="50"
                android:background="@drawable/transparent_stoke_background"
                android:gravity="center"
                android:text="Difficult to use"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/app_text_color"

                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:focusableInTouchMode="true"
            android:id="@+id/negative_feedback_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reason2"
            android:layout_marginTop="16dp"
            android:background="@drawable/editext_border"
            android:gravity="top|left"
            android:hint="Something else? Type here."
            android:fontFamily="@font/intermedium"
            android:imeOptions="actionDone"
            android:minLines="1"
            android:padding="10dp"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/negative_feedback_editText"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/uncompress_background"
                android:gravity="center"
                android:text="Dismiss"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/app_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/lovedit_background"
                android:gravity="center"
                android:text="Send"
                android:fontFamily="@font/intermedium"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>